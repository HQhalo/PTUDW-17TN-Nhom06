<link rel="stylesheet" href="/stylesheets/style_nav_vertical_thuthu.css">
<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <ul class="nav nav-tabs flex-column nav-pills nav_vertical_thuthu" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="userInfo-tab" data-toggle="tab" href="#userInfo" role="tab"
                        aria-controls="userInfo" aria-selected="true">Thông tin chung</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="borrowed-tab" data-toggle="tab" href="#borrowed" role="tab"
                        aria-controls="borrowed" aria-selected="false">Sách đang mượn</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="registerToBorrowed-tab" data-toggle="tab" href="#registerToBorrowed"
                        role="tab" aria-controls="registerToBorrowed" aria-selected="false">Đăng kí mượn sách</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="registerToGiveBack-tab" data-toggle="tab" href="#registerToGiveBack"
                        role="tab" aria-controls="registerToGiveBack" aria-selected="false">Đăng kí trả sách</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="myReview-tab" data-toggle="tab" href="#myReview" role="tab"
                        aria-controls="myReview" aria-selected="false">Đánh giá của tôi</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="changePassword-tab" data-toggle="tab" href="#changePassword" role="tab"
                        aria-controls="changePassword" aria-selected="false">Đổi mật khẩu</a>
                </li>
            </ul>
        </div>
        <div class="col ">
            <div class="tab-content nav_vertical_thuthu" id="myTabContent">
                <div class="tab-pane fade show active" id="userInfo" role="tabpanel" aria-labelledby="userInfo-tab">
                    {{> user_info}}
                </div>
                <div class="tab-pane fade" id="borrowed" role="tabpanel" aria-labelledby="borrowed-tab">
                    {{> user_books_are_borrowed}}
                </div>
                <div class="tab-pane fade" id="registerToBorrowed" role="tabpanel"
                    aria-labelledby="registerToBorrowed-tab">
                    {{> user_register_to_borrow_book}}
                </div>
                <div class="tab-pane fade" id="registerToGiveBack" role="tabpanel"
                    aria-labelledby="registerToGiveBack-tab">
                    {{> user_register_to_give_book_back}}
                </div>
                <div class="tab-pane fade" id="myReview" role="tabpanel" aria-labelledby="myReview-tab">
                    {{> user_review}}
                </div>
                <div class="tab-pane fade" id="changePassword" role="tabpanel" aria-labelledby="changePassword-tab">
                    {{> user_change_password}}
                </div>
            </div>
        </div>

    </div>

</div>