<div class='headline container background-color-main'>
    <div class='row h-100'>
        <div class='intro col-4 h-100'>
            <a href='/'>
                <span class="text-ellipsis">Thư viện</span>
                <br>
                <span class="text-ellipsis">Khoa CNTT</span>
            </a>
        </div>
        <div class='promote col-8 h-100'>
            <div id="promote-list" class="carousel slide h-100" data-ride="carousel" data-interval="5000">
                <ol class="carousel-indicators">
                    <li data-target="#promote-list" data-slide-to="0" class="active"></li>
                    <li data-target="#promote-list" data-slide-to="1"></li>
                    <li data-target="#promote-list" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner h-100">
                    {{#with features.[0]}}
                    <div class="carousel-item h-100 row active">
                        <a href='/book/{{bookDescriptionId}}' class="cover h-100">
                            <img src="{{imgUrl}}" alt="First slide">
                        </a>
                        <div class='overview'>
                            <div class='title'>
                                {{title}}
                            </div>
                            <div class='description'>
                                {{description}}
                            </div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with features.[1]}}
                    <div class="carousel-item h-100 row">
                        <a href='/book/{{bookDescriptionId}}' class="cover h-100">
                            <img src="{{imgUrl}}" alt="Second slide">
                        </a>
                        <div class='overview'>
                            <div class='title'>
                                {{title}}
                            </div>
                            <div class='description'>
                                {{description}}
                            </div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with features.[2]}}
                    <div class="carousel-item h-100 row">
                        <a href='/book/{{bookDescriptionId}}' class="cover h-100">
                            <img src="{{imgUrl}}" alt="Third slide">
                        </a>
                        <div class='overview'>
                            <div class='title'>
                                {{title}}
                            </div>
                            <div class='description'>
                                {{description}}
                            </div>
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
</div>