<link rel="stylesheet" href="/stylesheets/style_board_add.css">

<div class="board">
  <form method="post" action="/user/librarian/thuthuadd">
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">ID</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputEmail3" placeholder="ID" name = "id">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Mật khẩu</label>
      <div class="col-sm-10">
        <input class="form-control" id="inputPassword3" placeholder="Mật khẩu" name= "password">
      </div>
    </div>
    <fieldset class="form-group">
      <div class="row">
        <legend class="col-form-label col-sm-2 pt-0">Loại</legend>
        <div class="col-sm-10">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="role" id="gridRadios1" value='1' checked>
            <label class="form-check-label" for="gridRadios1">
              Sinh viên
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="role" id="gridRadios2" value='3'>
            <label class="form-check-label" for="gridRadios2">
              Giảng viên
            </label>
          </div>

        </div>
      </div>
    </fieldset>

    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Thêm tài khoản</button>
      </div>
    </div>
  </form>
</div>

