    <form action="" method="POST" id="formAddBook">
        <input type="text" hidden name="imgUrl" value={{imgUrl}}>
        <div class="row">
            <div class="col">

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Tên Sách</label>
                    <div class="col-sm-8">
                        <input type="text" name="title" class="form-control" placeholder="tên sách">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Mã ISBN 13 </label>
                    <div class="col-sm-8">
                        <input type="text" name="isbn13" class="form-control" placeholder="Mã ISBN 13">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Mã ISBN 10 </label>
                    <div class="col-sm-8">
                        <input type="text" name="isbn10" class="form-control" placeholder="Mã ISBN 10">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Năm Xuất Bản</label>
                    <div class="col-sm-8">
                        <input type="text" name="pubYear" class="form-control" placeholder="yyyy">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Tác Giả</label>
                    <div class="col-sm-8">
                        <input type="text" name="publisher" class="form-control" placeholder="Tác Giả">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Số Lượng</label>
                    <div class="col-sm-8">
                        <input type="text" name="number" class="form-control" placeholder="1">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Tag</label>
                    <div class="col-sm-8">
                        {{!-- <input type= "text" class="form-control" placeholder="C"> --}}
                        <select name="tagId" id="">
                            {{#each tags}}
                            <option value={{this.tagId}}>{{this.tagName}}</option>
                            {{/each}}
                        </select>

                    </div>
                </div>

            </div>
            <div class="col-3">
