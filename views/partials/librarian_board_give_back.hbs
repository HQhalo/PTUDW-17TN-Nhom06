<link rel="stylesheet" href="/stylesheets/commons/button.css">
<link rel="stylesheet" href="/stylesheets/style_board_give_back.css">

<form class="input-group mb-3 search-input">

  <input type="text" class="form-control" placeholder="Tên người mượn" aria-label="Tìm kiếm" name="userId"
    aria-describedby="basic-addon2">
  <div class="input-group-append">
    <input class='btn btn-outline-secondary' type="submit" value="tìm kiếm" />
  </div>
</form>

<form action="/user/librarian/trasach" method="POST">

<input type="text" hidden name= "userId" value={{userId}}>
<table class="table table-striped" style="position: relative;">
  <thead>
    <tr>
      <th scope="col">Bìa</th>
      <th scope="col">Tên Sách</th>
      <th scope="col">Ma Sach</th>
      <th scope="col">Ngày Mượn</th>
      <th scope="col">Tiền Phạt</th>
    </tr>
  </thead>
  <tbody>

    {{#each borrowedBooks}}
    <input type="text" hidden name= "bookId" value={{this.bookId}}>
    <input type="text" hidden name= "bookDescriptionId" value={{this.bookDescriptionId}}>
    <tr>
      <td>
        <img src={{this.imgUrl}} width="50px" height="70px" alt="">
      </td>
      <td>{{this.title}}</td>
      <td>{{this.bookId}}</td>
      <td>{{this.borrowDate}}</td>
      <td>{{this.fine}}</td>
      
    </tr>
    
    {{/each}}

</table>

<div><span>Tiền Phạt:</span> <span>{{totalFine}}</span> <span> đ</span></div>
<div class="form-group row float-right">
  <div class="col-sm-10">
    <button type="submit" class="btn bg-danger text-white btn-nowrap">Trả Sách</button>
  </div>
</div>

</form>