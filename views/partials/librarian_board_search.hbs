<link rel="stylesheet" href="/stylesheets/style_board_search.css">

{{#if error}}
    <div class="alert alert-danger">{{error}}</div>
{{/if}}

<form class="input-group mb-3 search-input" method='get'>
  <input type="text" class="form-control" placeholder="Tên người mượn" aria-label="Tìm kiếm" name="userid" value=""
    aria-describedby="basic-addon2">

  <input class='btn btn-outline-secondary' type="submit" value="tìm kiếm" />

</form>

<ul class="list-group">
  {{#each users}}
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <div>
      <img src={{this.avatar}} class="rounded-circle">
      <span class="name">{{this.name}}</span>
      
    </div>
    <span class="badge badge-primary badge-pill">{{this.userId}}</span>
    <a href={{this.borrwingLink}}>Mượn Sách</a>
    <a href={{this.giveBackLink}}>Trả Sách</a>
  </li>
  {{/each}}

</ul>